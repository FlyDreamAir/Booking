@page "/Flights/CheckEmail"

<PageTitle>Check your email</PageTitle>

<MudStack Class="p-4" AlignItems="@AlignItems.Center">
    <MudIcon Icon="@Icons.Material.Outlined.Check" Color="@Color.Success" Size="@Size.Large" />

    <MudText>
        @if (IsCancel == true)
        {
            <Wrapper>
                Your flight cancellation request has been recorded.<br />
                Please check your email to confirm the cancellation.
            </Wrapper>
        }
        else
        {
            <Wrapper>
                Your flight has been successfully booked.<br />
                Please check your email to confirm the booking and proceed to payment.
            </Wrapper>
        }
    </MudText>
</MudStack>

@code {
    [SupplyParameterFromQuery]
    bool? IsCancel { get; init; }
}
