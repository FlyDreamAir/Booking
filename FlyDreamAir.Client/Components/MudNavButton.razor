<style>
    .FlyDreamAir-Nav-Button-Active {
        color: var(--mud-palette-primary);
    }
</style>

<MudButton Variant="@Variant" Class="@Class">
    <NavLink href="@Href" Match="@Match" ActiveClass="FlyDreamAir-Nav-Button-Active">
        @ChildContent
    </NavLink>
</MudButton>

@code {
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    [Parameter]
    public string? Href { get; init; }

    [Parameter]
    public NavLinkMatch Match { get; init; }

    [Parameter]
    public Variant Variant { get; init; } = Variant.Text;

    [Parameter]
    public string? Class { get; init; }
}
